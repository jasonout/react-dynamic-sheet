{
  "name": "react-dynamic-sheet",
  "version": "0.2.0",
  "description": "A react component for an animated mobile-first dynamic modal/bottom-sheet",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rsoury/react-dynamic-sheet.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Ryan Soury",
    "email": "ryan@webdoodle.com.au",
    "url": "https://webdoodle.com.au"
  },
  "keywords": [
    "react",
    "react component",
    "component",
    "fast",
    "mobile",
    "dialog",
    "sheet",
    "modal"
  ],
  "main": "lib/index.cjs.js",
  "browser": "lib/index.js",
  "module": "lib/index.esm.js",
  "style": "build/index.css",
  "files": [
    "/lib"
  ],
  "scripts": {
    "start": "styleguidist server",
    "build": "rollup -c",
    "test": "jest --colors --verbose --no-cache",
    "prepublishOnly": "npm run clean && npm run build",
    "postbuild": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
    "docs:build": "styleguidist build",
    "clean": "rimraf ./lib",
    "lint": "eslint -c ./.eslintrc.js \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "iOS > 7",
    "Android > 3",
    "ChromeAndroid > 60",
    "Samsung > 0"
  ],
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@storybook/react": "^6.0.22",
    "framer-motion": "^2.7.6",
    "lodash.debounce": "^4.0.8",
    "modern-normalize": "^0.6.0",
    "prop-types": "^15.7.2",
    "react-append-to-body": "^2.0.24",
    "react-feather": "^1.1.6",
    "react-fixed-bottom": "^1.0.5",
    "react-measure": "^2.3.0",
    "react-scrolllock": "^4.0.1",
    "react-shadow": "^18.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@storybook/addon-actions": "^6.0.22",
    "@storybook/addon-essentials": "^6.0.22",
    "@storybook/addon-links": "^6.0.22",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-emotion": "^10.0.33",
    "babel-plugin-module-resolver": "^4.0.0",
    "css-loader": "^3.5.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-emotion": "^10.0.27",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^1.3.1",
    "jest": "^25.3.0",
    "jest-emotion": "^10.0.32",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-is": "^16.13.1",
    "react-styleguidist": "^11.0.5",
    "rimraf": "^2.6.3",
    "rollup": "^2.6.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-filesize": "^7.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-postcss": "^2.6.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-visualizer": "^4.0.4",
    "styled-components": "^5.2.0",
    "to-string-loader": "^1.1.6",
    "webpack": "^4.42.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx)": [
      "yarn lint --fix",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn format",
      "git add"
    ]
  }
}
